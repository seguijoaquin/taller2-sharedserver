################################################################################
Opcion 1:

Se definen las tablas a utilizar:
users:
pictures:
interests:
users_interests:

## Se define un tipo de datos ENUM para definir el sexo en tabla users

> CREATE TYPE sex AS ENUM ('F','M');

## Se define la tabla users

> CREATE TABLE users (
	id_user SERIAL PRIMARY KEY,
	name TEXT NOT NULL,
	alias TEXT,
	email TEXT NOT NULL,
	sex sex NOT NULL,
	latitude REAL,
	longitude REAL,
	photo_profile TEXT
	);

## Se define la tabla interests
/*
* This specifies that the combination of values in the indicated columns is
* unique across the whole table, though any one of the columns need not be
* (and ordinarily isn't) unique.
*/
> CREATE TABLE interests (
	id_interest SERIAL PRIMARY KEY,
	category TEXT NOT NULL,
	value TEXT NOT NULL,
	UNIQUE (category, value)
	);

## Se define la tabla users_interests

> CREATE TABLE users_interests (
	id_usr_int SERIAL PRIMARY KEY,
	id_user INTEGER NOT NULL REFERENCES users(id_user) ON DELETE CASCADE,
	id_interest INTEGER NOT NULL REFERENCES interests(id_interest) ON DELETE CASCADE
	);

## Se define la tabla pictures
## TODO: Considerar guardar info sobre cual es foto de perfil y orden de pics

> CREATE TABLE pictures (
	id_picture SERIAL PRIMARY KEY,
	id_user INTEGER NOT NULL REFERENCES users(id_user) ON DELETE CASCADE,
	pic TEXT
	);
